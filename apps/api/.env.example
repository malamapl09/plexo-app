# Database
DATABASE_URL="postgresql://plexo:plexo_dev_2024@localhost:5432/plexo?schema=public"

# JWT (generate with: openssl rand -base64 48)
JWT_SECRET="plexo-jwt-secret-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="plexo-refresh-secret-change-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# App
APP_NAME="Plexo"
APP_URL=http://localhost:3000

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Storage (minio for dev, s3 for prod)
STORAGE_MODE=minio
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="plexo"
MINIO_SECRET_KEY="plexo_minio_2024"
MINIO_BUCKET_PHOTOS="photos"
MINIO_BUCKET_SIGNATURES="signatures"

# S3 (production only — uncomment and set STORAGE_MODE=s3)
# AWS_S3_BUCKET=plexo-uploads
# AWS_S3_REGION=us-east-1

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Email (Amazon SES — optional, mock mode when not set)
# AWS_SES_FROM_EMAIL=noreply@plexoapp.com
