# ================================
# Plexo Operations - Docker Compose Environment
# Copy to .env and fill in values
# Used by docker-compose.dev.yml
# ================================

# Application
APP_NAME=Plexo
NEXT_PUBLIC_APP_NAME=Plexo
NEXT_PUBLIC_APP_LOGO=/logo.png
NEXT_PUBLIC_API_URL=http://localhost:3001
APP_URL=http://localhost:3000

# Database (Postgres container)
POSTGRES_USER=plexo
POSTGRES_PASSWORD=CHANGE_ME_strong_password
POSTGRES_DB=plexo

# Redis
REDIS_PASSWORD=CHANGE_ME_redis_password

# Storage (MinIO for dev)
STORAGE_MODE=minio
MINIO_ROOT_USER=plexo
MINIO_ROOT_PASSWORD=CHANGE_ME_minio_password

# JWT (generate with: openssl rand -base64 48)
JWT_SECRET=CHANGE_ME_jwt_secret_min_32_chars
JWT_REFRESH_SECRET=CHANGE_ME_jwt_refresh_secret_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGINS=http://localhost:3000

# Email (Amazon SES — optional for dev, mock mode when not set)
# AWS_SES_FROM_EMAIL=noreply@plexoapp.com
# AWS_SES_REGION=us-east-1

# Monitoring (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Firebase (optional — push notifications)
# FIREBASE_PROJECT_ID=your_firebase_project_id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY\n-----END PRIVATE KEY-----"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
