# ================================
# Plexo Operations - Environment Variables
# Copy to .env and fill in values
# ================================

# ================================
# APPLICATION
# ================================
APP_NAME=Plexo
NEXT_PUBLIC_APP_NAME=Plexo
NEXT_PUBLIC_APP_LOGO=/logo.png

# ================================
# DATABASE
# ================================
POSTGRES_USER=plexo
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=plexo
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# ================================
# REDIS
# ================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ================================
# MINIO (S3 Storage)
# ================================
MINIO_ROOT_USER=plexo
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false

# ================================
# JWT Authentication
# ================================
JWT_SECRET=your_jwt_secret_min_32_chars_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# Firebase (Push Notifications)
# ================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# ================================
# Application
# ================================
NODE_ENV=production
API_PORT=3000
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# ================================
# SSL (Production)
# ================================
# Place SSL certificates in ./ssl/ directory:
# - fullchain.pem
# - privkey.pem
